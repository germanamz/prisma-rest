{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "**/__tests__/**",
    "**/*.test.*"
  ]
}
